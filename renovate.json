{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "github-actions",
    "kubernetes",
    "kustomize",
    "custom.regex",
    "terraform"
  ],
  "ignorePaths": [
    "archive/**"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "^kubernetes-manifests/.+\\.yaml$"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^kubernetes-manifests/talos/tuppr/kubernetes-upgrade\\.yaml$/"
      ],
      "matchStrings": [
        "version:\\s*v(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/siderolabs/kubelet",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^kubernetes-manifests/talos/tuppr/talos-upgrade\\.yaml$/"
      ],
      "matchStrings": [
        "version:\\s*v(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghcr.io/siderolabs/installer",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^scripts/pre-commit$/"
      ],
      "matchStrings": [
        "PROMETHEUS_VERSION=\"v(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "prom/prometheus",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^scripts/pre-commit$/"
      ],
      "matchStrings": [
        "ALERTMANAGER_VERSION=\"v(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "quay.io/prometheus/alertmanager",
      "versioningTemplate": "semver"
    }
  ]
}
